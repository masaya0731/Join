<!DOCTYPE html>
<html>
  <head>
    <title>Join</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="mt-3">
      <nav>
        <div class="nav-bg"></div>
        <%= link_to "Join", root_path, class: "text-white h1 ml-3" %>
        <ul>
          <% if user_signed_in? %>
            <li><%= link_to "My page", public_user_path(current_user.id), class: "text-white" %></li>
            <li><%= link_to "Find", public_posts_path, class: "text-white" %></li>
            <li><%= link_to "Recruit", new_public_post_path, class: "text-white" %></li>
            <li><%= link_to "Log out", destroy_user_session_path, method: :delete, class: "text-white" %></li>
          <% else %>
            <li><%= link_to "Sign up", new_user_registration_path, class: "text-white" %></li>
            <li><%= link_to "Login", new_user_session_path, class: "text-white" %></li>
          <% end %>
        </ul>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>
