<div class="container mt-5">
  <div class="row">

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>

      <div class="field col-12 text-white">
        <%= f.label :name %><br />
        <%= f.text_field :name, autofocus: true %>
      </div>

      <div class="field col-12 text-white">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field col-12 text-white">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="field col-12 text-white">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="actions col-12 mt-3">
        <%= f.submit "Sign up", class: "btn btn-light" %>
      </div>
    <% end %>

    <div class="col-12 mt-3">
      <span class="btn btn-light"><%= render "public/shared/links" %></span>
    </div>
  </div>
</div>
